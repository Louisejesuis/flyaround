{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
    <h1 class="mx-auto my-3">Reservations list</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Flight</th>
                <th>Passenger</th>
                <th>Id</th>
                <th>Nbreservedseats</th>
                <th>Publicationdate</th>
                <th>Wasdone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td><a href="{{ path('reservation_show', { 'id': reservation.id }) }}">{{ reservation.flight }}</a></td>
                <td>{{ reservation.passenger }}</td>
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.nbReservedSeats }}</td>
                <td>{% if reservation.publicationDate %}{{ reservation.publicationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if reservation.wasDone %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('reservation_show', { 'id': reservation.id }) }}" class="btn btn-primary">show</a>
                        </li>
                        <li>
                            <a href="{{ path('reservation_edit', { 'id': reservation.id }) }}" class="btn btn-primary">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reservation_new') }}" class="btn btn-primary">Create a new reservation</a>
        </li>
    </ul>
    </div>
{% endblock %}
